<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Socket Counter</title>
</head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">

        $(document).ready(function (){
            var socket = io.connect();

            $('#epic').click(function () {
                socket.emit("click_epic")
                });
            
                $('#reset').click(function (){
                    socket.emit("click_reset")
            });
            socket.on("update_count", function (data) {
               $("#count").html(data.count);
            });
        });
    </script>

<style>
    body{
        padding: 30px;
        max-width: 500px;
    }
    #box{
        background-color: black;
        color: white;
        font-family: dekko;
        letter-spacing: 6px;
        border-radius: 20px;
        border: darkgrey solid 2px;
        width: 600px;
        padding:30px;
    }
    h1{
        text-align: center;
    }
    h3{
        text-align: center;
    }
    .btn{
        margin:10px;
    }
    input{
        width: 200px;
        font-family: dekko;
        letter-spacing: 3px;
    }
    #buttons{
        max-width: 100px;
        margin:auto;
    }
    h2{
        max-width: 100px;
        height:100px;
        margin:auto;
    }
    #count{
        color: white;
        font-family: dekko;
        margin: auto;
        width: 20px;
    }
</style>

<body>
    <div id="box">
        <h1>COUNTER</h1>
        <h2><span id="count">0</span></h2>
        <div id="buttons">
            <button id="epic" type="submit" class="btn btn-warning" >EPIC</button><br>
            <button id="reset" type="submit" class="btn btn-danger" >RESET</button>
        </div>
        
    </div>

</body>
</html>